package com.study.Todo_list.util;

import java.io.IOException;

import javax.servlet.http.HttpServletRequest;

import com.google.gson.Gson;
import com.study.Todo_list.Dto.insertTodoListReqDto;

public class RequestUtil {
	public static <T> insertTodoListReqDto ofJson(HttpServletRequest request, Class<T> classof) throws IOException {
		StringBuilder builder = new StringBuilder();
		String readData = null;
		Gson gson = new Gson();
		while ((readData = request.getReader().readLine()) != null) {
			builder.append(readData);
		}
		insertTodoListReqDto dto = gson.fromJson(builder.toString(), classof);
		return ;
	}
}
